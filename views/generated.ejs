<%- include ('partials/header2') %> 
    <div class="container">
    
            
    <form action="/home/<%= id %>/add" method="POST">
        <div class="input-group my-3">
            <input type="text" class="form-control w-auto p-3 h-auto box" value="<%= password %>" name="generatedPassword"  aria-label="Recipient's username with two button addons" readonly>
            <input type="text" class="form-control w-auto p-3 h-auto" placeholder="Username" name="username" aria-label="Recipient's username with two button addons" required autofocus>
            <input type="text" class="form-control w-auto p-3 h-auto" placeholder="Application" name="application" aria-label="Recipient's username with two button addons" required>
            <div class="input-group-append">
                <button class="btn btn-lg btn-outline-primary mx-3 mt-1" type="submit">Add Password</button>
                <a href="/home/<%= id %> "><button type="button" class="btn btn-danger mx-2 mt-2">Go Back &#8592</button></a>
            </div>
        </div>
    </form>



    

    <table class="table table-striped table-success table-hover">
        <thead>
          <tr>
            <th scope="col">Application</th>
            <th scope="col">Username</th>
            <th scope="col">Password</th>
          </tr>
        </thead>
        <tbody>
            <% data.forEach(elem => { %>
                <tr>
                    <td><%= elem.application %></td>
                    <td><%= elem.username %> </td>
                    <td><%= elem.password %></td>
                </tr>
            <% }); %> 
        </tbody>
      </table>



<%- include ('partials/footer') %> 